<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.add_schedule.AddScheduleActivity">

    <!--Header-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csHeader"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:id="@+id/imgBack"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"/>

        <TextView
            android:text="@string/add_new_schedule"
            style="@style/TextViewTitleSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btnDone"
            android:src="@drawable/ic_check"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/csHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="50dp"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/etTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/enter_title"
                style="@style/EditTextNormalSize"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgShowContent"
                app:layout_constraintTop_toTopOf="@id/etTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/etTitle"
                app:layout_constraintStart_toEndOf="@id/etTitle"
                android:src="@drawable/ic_drop_down"
                android:layout_width="30dp"
                android:layout_height="0dp"
                app:tint="@color/colorBlack" />

            <EditText
                android:id="@+id/etContent"
                android:visibility="gone"
                style="@style/EditTextNormalSize"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/etTitle"
                android:hint="@string/enter_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/vLine1"
                app:layout_constraintTop_toBottomOf="@id/etContent"
                android:layout_marginTop="15dp"
                app:layout_goneMarginTop="15dp"
                android:background="@color/colorGrayBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_divider"/>

            <ImageView
                android:id="@+id/imgDate"
                app:layout_constraintTop_toBottomOf="@id/vLine1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_date"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="@id/imgDate"
                app:layout_constraintStart_toEndOf="@id/imgDate"
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvStartEnd"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imgDate"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/date"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvStartDay"
                app:layout_constraintTop_toTopOf="@id/tvStartEnd"
                app:layout_constraintStart_toEndOf="@id/tvStartEnd"
                tools:text="2021/04/02"
                android:textSize="13sp"
                android:layout_marginStart="30dp"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvA"
                android:text="~"
                app:layout_constraintTop_toTopOf="@id/tvStartDay"
                app:layout_constraintStart_toEndOf="@id/tvStartDay"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvEndDay"
                tools:text="2021/04/02"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="@id/tvA"
                app:layout_constraintStart_toEndOf="@id/tvA"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llTime"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvStartEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTime"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvStartTime"
                    tools:text="9h:00"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvB"
                    android:textSize="13sp"
                    android:text="~"
                    app:layout_constraintTop_toTopOf="@id/tvStartTime"
                    app:layout_constraintStart_toEndOf="@id/tvStartTime"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvEndTime"
                    tools:text="12h:21"
                    android:textSize="13sp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toTopOf="@id/tvB"
                    app:layout_constraintStart_toEndOf="@id/tvB"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/ckAllDay"
                app:layout_goneMarginTop="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="@color/colorText"
                android:text="@string/alllongday"
                app:layout_constraintTop_toBottomOf="@id/llTime"
                app:layout_constraintStart_toStartOf="@id/llTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/ckNoLoop"
                app:layout_goneMarginTop="5dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textColor="@color/colorText"
                android:text="@string/no_loop"
                app:layout_constraintTop_toBottomOf="@id/ckAllDay"
                app:layout_constraintStart_toStartOf="@id/ckAllDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <HorizontalScrollView
                android:id="@+id/llTab"
                app:layout_constraintTop_toBottomOf="@id/ckNoLoop"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvDaily"
                        android:gravity="center"
                        android:background="@drawable/bg_tab_chosen"
                        android:textColor="@color/colorBlack"
                        android:text="@string/daily"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tvWeekly"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bg_tab_normal"
                        android:textColor="@color/colorBlack"
                        android:text="@string/weekly"
                        app:layout_constraintStart_toEndOf="@id/tvDaily"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tvMonthly"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bg_tab_normal"
                        android:textColor="@color/colorBlack"
                        android:text="@string/monthly"
                        app:layout_constraintStart_toEndOf="@id/tvWeekly"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tvAnnually"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bg_tab_normal"
                        android:textColor="@color/colorBlack"
                        android:text="@string/annually"
                        app:layout_constraintStart_toEndOf="@id/tvMonthly"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>


            </HorizontalScrollView>

            <ScrollView
                android:id="@+id/scVp"
                android:padding="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/llTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/layout_viewpager2"/>
            </ScrollView>

            <!--Notification Settings-->
            <View
                android:id="@+id/vLine2"
                app:layout_constraintTop_toBottomOf="@id/scVp"
                android:background="@color/colorGrayBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_divider"/>

            <com.kunpark.resource.custom_view.NotificationSettings
                android:id="@+id/notificationSetting"
                app:layout_constraintTop_toBottomOf="@id/vLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/vLine3"
                app:layout_constraintTop_toBottomOf="@id/notificationSetting"
                android:background="@color/colorGrayBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_divider"/>

            <!--Select Calendar-->
            <ImageView
                android:id="@+id/imgSelectCalendar"
                app:layout_constraintTop_toBottomOf="@id/vLine3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_date"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvSelectCalendar"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="@id/imgSelectCalendar"
                app:layout_constraintStart_toEndOf="@id/imgSelectCalendar"
                android:text="@string/select_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvResource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/please_choose_resource"
                android:textColor="@color/colorText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tvSelectCalendar"
                app:layout_constraintTop_toBottomOf="@id/tvSelectCalendar" />

            <ImageView
                android:src="@drawable/ic_drop_down"
                app:layout_constraintBottom_toBottomOf="@id/tvResource"
                app:layout_constraintEnd_toEndOf="@id/tvResource"
                app:layout_constraintTop_toTopOf="@id/tvResource"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@color/colorBlack" />


            <!--Share-->
            <ImageView
                android:id="@+id/imgShare"
                app:layout_constraintTop_toBottomOf="@id/tvResource"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvShare"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="@id/imgShare"
                app:layout_constraintStart_toEndOf="@id/imgShare"
                android:text="@string/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvShareValue"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorText"
                android:hint="@string/please_choose_share"
                app:layout_constraintStart_toStartOf="@id/tvShare"
                app:layout_constraintTop_toBottomOf="@id/tvShare"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_drop_down"
                app:layout_constraintBottom_toBottomOf="@id/tvShareValue"
                app:layout_constraintEnd_toEndOf="@id/tvShareValue"
                app:layout_constraintTop_toTopOf="@id/tvShareValue"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@color/colorBlack" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>