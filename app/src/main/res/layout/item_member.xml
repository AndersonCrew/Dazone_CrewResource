<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="30dp"
    android:paddingTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorWhite"
        android:src="@drawable/ic_folder_close"
        app:cardCornerRadius="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/imgAvatar"
            android:src="@drawable/avatar_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:paddingLeft="10dp"
        tools:text="Anderson"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@id/tvPosition"
        app:layout_constraintStart_toEndOf="@id/cardAvt"
        app:layout_constraintTop_toTopOf="@id/cardAvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPosition"
        android:paddingLeft="10dp"
        android:alpha="0.7"
        android:fontFamily="@font/roboto_medium"
        tools:text="Dazone Tech Android"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/cardAvt"
        app:layout_constraintBottom_toBottomOf="@id/cardAvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/ckChose"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/cardAvt"
        app:layout_constraintTop_toTopOf="@id/cardAvt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>