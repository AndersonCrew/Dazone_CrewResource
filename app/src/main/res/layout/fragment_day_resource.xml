<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--All Day-->
    <TextView
        android:id="@+id/tvAllDay"
        android:gravity="center"
        android:background="@color/colorGrayBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorText"
        android:text="@string/all_day"
        android:fontFamily="@font/roboto_medium"
        android:textSize="13sp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <View
        android:id="@+id/vAllDay"
        app:layout_constraintStart_toEndOf="@id/tvAllDay"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/tvAllDay"
        app:layout_constraintTop_toTopOf="@id/tvAllDay"
        android:layout_width="0.5dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/llAllDay"
        android:orientation="horizontal"
        android:background="@color/colorGrayBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/vAllDay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llAllDay"
        tools:listitem="@layout/item_hour">
        <LinearLayout
            android:id="@+id/llTime"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>