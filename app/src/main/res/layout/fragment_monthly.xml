<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvFrequency"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/frequency"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <Spinner
        android:id="@+id/spinnerFrequency"
        android:textSize="13sp"
        android:layout_marginLeft="47dp"
        app:layout_constraintTop_toTopOf="@id/tvFrequency"
        app:layout_constraintBottom_toBottomOf="@id/tvFrequency"
        app:layout_constraintStart_toEndOf="@id/tvFrequency"
        tools:text="Daily"
        android:textColor="@color/colorBlack"
        android:layout_width="170dp"
        android:layout_height="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/tvFrequency"
        app:layout_constraintTop_toBottomOf="@id/spinnerFrequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rgSpecialDay"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_a"
                android:text=""
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio_b"
                android:text="@string/Lunar"
                android:checked="true"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio_c"
                android:text="@string/intercalary_months"
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <Spinner
            android:id="@+id/spinnerRd"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="170dp"
            android:layout_height="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>