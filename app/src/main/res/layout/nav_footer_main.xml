<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Agenda-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csAgenda"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgAgenda"
            android:src="@drawable/ic_calendar_agenda"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/size_icon_menu"
            android:layout_height="@dimen/size_icon_menu"
            app:tint="#FF878787"
            android:layout_marginLeft="15dp" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/imgAgenda"
            app:layout_constraintTop_toTopOf="@id/imgAgenda"
            app:layout_constraintBottom_toBottomOf="@id/imgAgenda"
            android:text="@string/agenda"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.8"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vLine1"
        android:background="@color/colorGrayBackground"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--CalendarDay-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csCalendarDay"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgDay"
            android:src="@drawable/ic_calendar_day"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/size_icon_menu"
            android:layout_height="@dimen/size_icon_menu"
            app:tint="#FF878787"
            android:layout_marginLeft="15dp" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/imgDay"
            app:layout_constraintTop_toTopOf="@id/imgDay"
            app:layout_constraintBottom_toBottomOf="@id/imgDay"
            android:text="@string/day"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorGrayBackground"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--CalendarWeek-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csCalendarWeek"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgWeek"
            android:src="@drawable/ic_calendar_week"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/size_icon_menu"
            android:layout_height="@dimen/size_icon_menu"
            app:tint="#FF878787"
            android:layout_marginLeft="15dp" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/imgWeek"
            app:layout_constraintTop_toTopOf="@id/imgWeek"
            app:layout_constraintBottom_toBottomOf="@id/imgWeek"
            android:text="@string/week"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorGrayBackground"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--CalendarMonth-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csCalendarMonth"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMonth"
            android:src="@drawable/ic_calendar_month"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/size_icon_menu"
            android:layout_height="@dimen/size_icon_menu"
            app:tint="#FF878787"
            android:layout_marginLeft="15dp" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/imgMonth"
            app:layout_constraintTop_toTopOf="@id/imgMonth"
            app:layout_constraintBottom_toBottomOf="@id/imgMonth"
            android:text="@string/month"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorGrayBackground"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csMyResrc"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgFolder"
            android:src="@drawable/ic_folder"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#FF878787"
            android:layout_marginLeft="15dp" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/imgFolder"
            app:layout_constraintTop_toTopOf="@id/imgFolder"
            app:layout_constraintBottom_toBottomOf="@id/imgFolder"
            android:text="My Resource Rsvn. List"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icDropDown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_drop_down"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorGray" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorGrayBackground"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMyResource"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>